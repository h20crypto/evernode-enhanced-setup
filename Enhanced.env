# Enhanced Evernode Payment API Configuration

# Xumm API Credentials (get from https://apps.xumm.dev)
XUMM_API_KEY=your_xumm_api_key_here
XUMM_API_SECRET=your_xumm_api_secret_here

# Payment Receiving Wallets (where customers send payments)
RECEIVING_WALLET=rYourMainWalletAddressHere
XRP_RECEIVING_WALLET=rYourXRPWalletAddressHere
XAH_RECEIVING_WALLET=rYourXAHWalletAddressHere
EVR_RECEIVING_WALLET=rYourEVRWalletAddressHere

# Commission Payout Wallet (for sending commissions to hosts)
COMMISSION_WALLET_ADDRESS=rYourCommissionWalletAddressHere
COMMISSION_WALLET_SECRET=sYourCommissionWalletSecretHere

# EVR Token Configuration
EVR_ISSUER=rEvernodeIssuerAddressHere

# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration (optional - currently using in-memory storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/evernode_payments

# Security
API_SECRET_KEY=your_random_secret_key_for_jwt_tokens

# NFT Configuration
NFT_METADATA_BASE_URL=https://enhanced-evernode.com/nft/metadata/

# Commission Settings
DEFAULT_COMMISSION_RATE=0.20

# Webhook URLs (for external notifications)
WEBHOOK_SUCCESS_URL=https://your-main-site.com/webhook/payment-success
WEBHOOK_COMMISSION_URL=https://your-main-site.com/webhook/commission-paid

# External APIs
EVERNODE_API_URL=https://api.evernode.network

# Logging
LOG_LEVEL=info
